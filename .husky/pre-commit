#!/bin/sh
# .husky/pre-commit

# Skip in CI or for release commits
if [ "$CI" = "true" ] || git log -1 --pretty=%B | grep -q '\[skip ci\]'; then
  echo "üöÄ Skipping pre-commit validation in CI or for release commit."
  exit 0
fi

echo 'üöÄ Starting pre-commit validation...'

# Get current branch
BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null || git branch --show-current 2>/dev/null || echo "unknown")

# Define branch types
PROTECTED_BRANCHES=("main" "production")
DEVELOPMENT_BRANCHES=("develop" "preview")

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

VALIDATION_LEVEL="none"

echo "üìç Current branch: $BRANCH"

# Determine validation level
for protected_branch in "${PROTECTED_BRANCHES[@]}"; do
    if [[ "$BRANCH" == "$protected_branch" ]]; then
        VALIDATION_LEVEL="full"
        echo "üîí Detected protected branch: $BRANCH"
        break
    fi
done

if [[ "$VALIDATION_LEVEL" == "none" ]]; then
    for dev_branch in "${DEVELOPMENT_BRANCHES[@]}"; do
        if [[ "$BRANCH" == "$dev_branch" ]]; then
            VALIDATION_LEVEL="basic"
            echo "üõ†Ô∏è  Detected development branch: $BRANCH"
            break
        fi
    done
fi

if [[ "$VALIDATION_LEVEL" == "full" ]]; then
    echo -e "${GREEN}üîí Running FULL validation for protected branch: $BRANCH${NC}"
elif [[ "$VALIDATION_LEVEL" == "basic" ]]; then
    echo -e "${BLUE}üõ†Ô∏è  Running BASIC validation for development branch: $BRANCH${NC}"
fi

# Helper function to run commands
run_command() {
    local command="$1"
    local error_message="$2"
    
    echo -e "${BLUE}üîÑ Running: $command${NC}"
    
    if ! pnpm run "$command" 2>/dev/null; then
        echo -e "${RED}‚ùå $error_message${NC}"
        return 1
    fi
    
    echo -e "${GREEN}‚úÖ $command completed successfully${NC}"
    return 0
}

# Helper function to check if script exists
script_exists() {
    local script_name="$1"
    grep -q "\"$script_name\":" package.json 2>/dev/null
}

# Basic validation (development branches)
if [[ "$VALIDATION_LEVEL" == "basic" || "$VALIDATION_LEVEL" == "full" ]]; then
    echo -e "\n${YELLOW}üìù Checking TypeScript...${NC}"
    if script_exists "type-check"; then
        if ! run_command "type-check" "TypeScript check failed. Fix the type errors above."; then
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  type-check script not found, skipping...${NC}"
    fi
fi

# Full validation (protected branches)
if [[ "$VALIDATION_LEVEL" == "full" ]]; then
    echo -e "\n${YELLOW}üîç Running full ESLint check...${NC}"
    if script_exists "lint"; then
        if ! run_command "lint" "ESLint check failed. Fix the errors above."; then
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  lint script not found, skipping...${NC}"
    fi

    echo -e "\n${YELLOW}üé® Checking code formatting (all files)...${NC}"
    if script_exists "format:fix"; then
        if ! run_command "format:fix" "Prettier format failed."; then
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  format script not found, skipping...${NC}"
    fi

    echo -e "\n${YELLOW}üèóÔ∏è  Building project...${NC}"
    if script_exists "build"; then
        if ! run_command "build" "Build failed. View the errors above."; then
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  build script not found, skipping...${NC}"
    fi

    echo -e "\n${YELLOW}üß™ Running tests...${NC}"
    if script_exists "test:run"; then
        if ! run_command "test:run" "Tests failed. Fix the failing tests."; then
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  test script not found, skipping...${NC}"
    fi
fi

echo -e "\n${GREEN}‚úÖ All checks passed for branch: $BRANCH! Committing now.${NC}"
